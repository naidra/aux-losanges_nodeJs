<%- include('./partials/header.ejs') %>

  <div class="container">
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
            <div class="d-flex justify-content-center py-4">
              <a href="dashboard.html" class="logo d-flex align-items-center w-auto">
                <img src="assets/images/logo.png" alt="">
                <span class="d-none d-lg-block">ALBFIX Staff</span>
              </a>
            </div><!-- End Logo -->
            <div class="card mb-3">
              <div class="card-body">
                <div class="pt-4 pb-2">
                  <h5 class="card-title text-center pb-0 fs-4">Regjistrimi</h5>
                  <p class="text-center small">Ju lutemi shënoni të dhënat për identefikim</p>
                </div>
                <form class="row g-3 needs-validation" novalidate action="/register" method="POST">
                  <div class="col-12">
                    <label for="yourName" class="form-label">Emri</label>
                    <div class="input-group has-validation">
                      <input type="text" name="name" class="form-control" id="yourName" required>
                      <div class="invalid-feedback">Shënoni emrin për identefikim</div>
                    </div>
                  </div>
                  <div class="col-12">
                    <label for="yourEmail" class="form-label">Email</label>
                    <div class="input-group has-validation">
                      <input type="text" name="email" class="form-control" id="yourEmail" required>
                      <div class="invalid-feedback">Shënoni emailin për identefikim</div>
                    </div>
                  </div>
                  <div class="col-12">
                    <label for="yourPassword" class="form-label">Fjalëkalimi</label>
                    <input type="password" name="password" class="form-control" id="yourPassword" required>
                    <div class="invalid-feedback">Ju lutemi shënoni fjalëkalimin!</div>
                  </div>
                  <div class="col-12">
                    <label for="yourPassword" class="form-label">Fjalëkalimi</label>
                    <input type="password" name="password-confirm" class="form-control" id="yourPassword" required>
                    <div class="invalid-feedback">Ju lutemi shënoni fjalëkalimin!</div>
                  </div>
                  <div class="col-12">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe">
                      <label class="form-check-label" for="rememberMe">Më mbaj mend</label>
                    </div>
                  </div>
                  <div class="col-12">
                    <button class="btn btn-primary w-100" type="submit">Identefikohu</button>
                  </div>
                </form>
              </div>
            </div>
            <div class="credits">
              Përgatitur nga <a href="https://albfix.net/">ALBFIX</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

<%- include('./partials/footer.ejs') %>